<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>{{ title }}</title>
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <meta content="Free HTML Templates" name="keywords" />
  <meta content="Free HTML Templates" name="description" />

  {# ===== Fallback ke data global ===== #}
  {% set assetsBase = assetsBase or shared.assetsBase or '/assets' %}
  {% set topbar     = topbar     or shared.topbar %}
  {% set nav        = nav        or shared.nav %}
  {% set footer     = footer     or shared.footer %}

  <!-- Favicon -->
  <link href="{{ ('assets/img/favicon.ico') | url }}" rel="icon" />

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500;600;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" />

  <!-- Libraries Stylesheet -->
  <link rel="stylesheet" href="{{ (assetsBase + '/lib/owlcarousel/assets/owl.carousel.min.css') | url }}" />

  <!-- Custom Stylesheet -->
  <link rel="stylesheet" href="{{ (assetsBase + '/css/style.css') | url }}" />
</head>

<body>
  {% include "partials/topbar.njk" %}
  {% include "partials/navbar.njk" %}

  <main>
    {{ content | safe }}
  </main>

  {% include "partials/footer.njk" %}

  <!-- Back to Top -->
  <a href="#" class="btn btn-lg btn-primary rounded-0 btn-lg-square back-to-top">
    <i class="fa fa-angle-double-up"></i>
  </a>

  <!-- JS -->
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
  <script src="{{ (assetsBase + '/lib/easing/easing.min.js') | url }}"></script>
  <script src="{{ (assetsBase + '/lib/waypoints/waypoints.min.js') | url }}"></script>
  <script src="{{ (assetsBase + '/lib/counterup/counterup.min.js') | url }}"></script>
  <script src="{{ (assetsBase + '/lib/owlcarousel/owl.carousel.min.js') | url }}"></script>
  <script src="{{ (assetsBase + '/js/main.js') | url }}"></script>
</body>
</html>
