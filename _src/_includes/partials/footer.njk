<div class="container-fluid position-relative overlay-top bg-dark text-white-50 py-5" style="margin-top: 90px;">
  <div class="container mt-5 pt-5">
    <div class="row">
      <div class="col-md-6 mb-5">
        <a href="{{ '/' | url }}" class="navbar-brand">
          <h1 class="mt-n2 text-uppercase text-white">{{ footer.brand_html | safe }}</h1>
        </a>
        <p class="m-0">Accusam nonumy clita sed rebum kasd eirmod elitr...</p>
      </div>
      <div class="col-md-6 mb-5">
        <h3 class="text-white mb-4">Newsletter</h3>
        <div class="w-100">
          <div class="input-group">
            <input type="text" class="form-control border-light" style="padding: 30px;" placeholder="Your Email Address">
            <div class="input-group-append">
              <button class="btn btn-primary px-4">{{ footer.newsletter_btn }}</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4 mb-5">
        <h3 class="text-white mb-4">Get In Touch</h3>
        <p><i class="fa fa-map-marker-alt mr-2"></i>{{ footer.get_in_touch.address }}</p>
        <p><i class="fa fa-phone-alt mr-2"></i>{{ footer.get_in_touch.phone }}</p>
        <p><i class="fa fa-envelope mr-2"></i>{{ footer.get_in_touch.email }}</p>
        <div class="d-flex justify-content-start mt-4">
          {% for s in footer.get_in_touch.social %}
            <a class="text-white mr-4" href="#"><i class="fab fa-2x fa-{{ s }}"></i></a>
          {% endfor %}
        </div>
      </div>

      <div class="col-md-4 mb-5">
        <h3 class="text-white mb-4">Our Courses</h3>
        <div class="d-flex flex-column justify-content-start">
          {% for c in footer.courses %}
            <a class="text-white-50 mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>{{ c }}</a>
          {% endfor %}
        </div>
      </div>

      <div class="col-md-4 mb-5">
        <h3 class="text-white mb-4">Quick Links</h3>
        <div class="d-flex flex-column justify-content-start">
          {% for q in footer.quick_links %}
            <a class="text-white-50 mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>{{ q }}</a>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid bg-dark text-white-50 border-top py-4" style="border-color: rgba(256, 256, 256, .1) !important;">
  <div class="container">
    <div class="row">
      <div class="col-md-6 text-center text-md-left mb-3 mb-md-0">
        <p class="m-0">Copyright &copy; <a class="text-white" href="#">Your Site Name</a>. All Rights Reserved.</p>
      </div>
      <div class="col-md-6 text-center text-md-right">
        <p class="m-0">{{ footer.copyright_html | safe }}</p>
      </div>
    </div>
  </div>
</div>
