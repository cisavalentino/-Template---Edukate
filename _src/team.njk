---
permalink: "/team/"
layout: base.njk
---

<!-- Header -->
<div class="jumbotron jumbotron-fluid page-header position-relative overlay-bottom" style="margin-bottom: 90px;">
  <div class="container text-center py-5">
    <h1 class="text-white display-1">{{ header.title }}</h1>
    <div class="d-inline-flex text-white mb-5">
      {% for b in (header.breadcrumb or []) %}
        {% if not loop.first %}<i class="fa fa-angle-double-right pt-1 px-3"></i>{% endif %}
        {% if b.url %}<p class="m-0 text-uppercase"><a class="text-white" href="{{ b.url | url }}">{{ b.label }}</a></p>
        {% else %}<p class="m-0 text-uppercase">{{ b.label }}</p>{% endif %}
      {% endfor %}
    </div>
    <div class="mx-auto mb-5" style="width:100%;max-width:600px;">
      <div class="input-group">
        <div class="input-group-prepend">
          <button class="btn btn-outline-light bg-white text-body px-4 dropdown-toggle" type="button" data-toggle="dropdown">
            {{ (header.search and header.search.dropdown_label) or 'Courses' }}
          </button>
          <div class="dropdown-menu">
            {% for item in ((header.search and header.search.dropdown_items) or []) %}
              <a class="dropdown-item" href="#">{{ item }}</a>
            {% endfor %}
          </div>
        </div>
        <input type="text" class="form-control border-light" style="padding:30px 25px;" placeholder="{{ (header.search and header.search.placeholder) or 'Keyword' }}">
        <div class="input-group-append"><button class="btn btn-secondary px-4 px-lg-5">Search</button></div>
      </div>
    </div>
  </div>
</div>

<!-- Team -->
<div class="container-fluid py-5">
  <div class="container py-5">
    <div class="section-title text-center position-relative mb-5">
      <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">{{ team.subtitle }}</h6>
      <h1 class="display-4">{{ team.title }}</h1>
    </div>

    <div class="owl-carousel team-carousel position-relative" style="padding:0 30px;">
      {% for t in (team.items or []) %}
      <div class="team-item">
        <img class="img-fluid w-100" src="{{ t.image | url }}" alt="">
        <div class="bg-light text-center p-4">
          <h5 class="mb-3">{{ t.name }}</h5>
          <p class="mb-2">{{ t.role }}</p>
          <div class="d-flex justify-content-center">
            {% for s in (team.social or []) %}
              <a class="mx-1 p-1" href="#"><i class="fab fa-{{ s }}"></i></a>
            {% endfor %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
