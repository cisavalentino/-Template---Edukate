---
permalink: "/course/"
layout: base.njk
---

<!-- Header Start -->
<div class="jumbotron jumbotron-fluid page-header position-relative overlay-bottom" style="margin-bottom: 90px;">
  <div class="container text-center py-5">
    <h1 class="text-white display-1">{{ header.title | default('Courses') }}</h1>
    <div class="d-inline-flex text-white mb-5">
      {% for b in (header.breadcrumb or []) %}
        {% if not loop.first %}<i class="fa fa-angle-double-right pt-1 px-3"></i>{% endif %}
        {% if b.url %}
          <p class="m-0 text-uppercase"><a class="text-white" href="{{ b.url | url }}">{{ b.label }}</a></p>
        {% else %}
          <p class="m-0 text-uppercase">{{ b.label }}</p>
        {% endif %}
      {% endfor %}
    </div>
    <div class="mx-auto mb-5" style="width: 100%; max-width: 600px;">
      <div class="input-group">
        <div class="input-group-prepend">
          <button class="btn btn-outline-light bg-white text-body px-4 dropdown-toggle" type="button" data-toggle="dropdown">
            {{ (header.search and header.search.dropdown_label) or 'Courses' }}
          </button>
          <div class="dropdown-menu">
            {% for item in ((header.search and header.search.dropdown_items) or []) %}
              <a class="dropdown-item" href="#">{{ item }}</a>
            {% endfor %}
          </div>
        </div>
        <input type="text" class="form-control border-light" style="padding: 30px 25px;" placeholder="{{ (header.search and header.search.placeholder) or 'Keyword' }}">
        <div class="input-group-append">
          <button class="btn btn-secondary px-4 px-lg-5">Search</button>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Header End -->

<!-- Courses Start -->
<div class="container-fluid py-5">
  <div class="container py-5">
    <div class="row mx-0 justify-content-center">
      <div class="col-lg-8">
        <div class="section-title text-center position-relative mb-5">
          <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">{{ courses.subtitle }}</h6>
          <h1 class="display-4">{{ courses.title }}</h1>
        </div>
      </div>
    </div>
    <div class="row">
      {% for c in site.courses %}
      <div class="col-lg-4 col-md-6 pb-4">
        <a class="courses-list-item position-relative d-block overflow-hidden mb-2" href="{{ '/course/' | url }}{{ c.slug }}/">
          <img class="img-fluid" src="{{ c.image | url }}" alt="">
          <div class="courses-text">
            <h4 class="text-center text-white px-3">{{ c.title }}</h4>
            <div class="border-top w-100 mt-3">
              <div class="d-flex justify-content-between p-4">
                <span class="text-white"><i class="fa fa-user mr-2"></i>{{ c.author }}</span>
                <span class="text-white"><i class="fa fa-star mr-2"></i>{{ c.rating }} <small>({{ c.reviews }})</small></span>
              </div>
            </div>
          </div>
        </a>
      </div>
      {% endfor %}
      <div class="col-12">
        <nav aria-label="Page navigation">
          <ul class="pagination pagination-lg justify-content-center mb-0">
            <li class="page-item{% if courses.pagination.active == 1 %} disabled{% endif %}">
              <a class="page-link rounded-0" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            {% for p in courses.pagination.pages %}
            <li class="page-item{% if p == courses.pagination.active %} active{% endif %}">
              <a class="page-link" href="#">{{ p }}</a>
            </li>
            {% endfor %}
            <li class="page-item{% if courses.pagination.active == courses.pagination.pages | last %} disabled{% endif %}">
              <a class="page-link rounded-0" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>
<!-- Courses End -->
