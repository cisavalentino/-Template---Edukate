---
permalink: "/contact/"
title: "Contact - Edukate"
layout: base.njk
---

<!-- Header Start -->
<div class="jumbotron jumbotron-fluid page-header position-relative overlay-bottom" style="margin-bottom: 90px;">
  <div class="container text-center py-5">
    <h1 class="text-white display-1">{{ header.title | default('Contact') }}</h1>
    <div class="d-inline-flex text-white mb-5">
      {% for b in (header.breadcrumb or []) %}
        {% if not loop.first %}<i class="fa fa-angle-double-right pt-1 px-3"></i>{% endif %}
        {% if b.url %}
          <p class="m-0 text-uppercase"><a class="text-white" href="{{ b.url | url }}">{{ b.label }}</a></p>
        {% else %}
          <p class="m-0 text-uppercase">{{ b.label }}</p>
        {% endif %}
      {% endfor %}
    </div>
    <div class="mx-auto mb-5" style="width: 100%; max-width: 600px;">
      <div class="input-group">
        <div class="input-group-prepend">
          <button class="btn btn-outline-light bg-white text-body px-4 dropdown-toggle" type="button" data-toggle="dropdown">
            {{ (header.search and header.search.dropdown_label) or 'Courses' }}
          </button>
          <div class="dropdown-menu">
            {% for item in ((header.search and header.search.dropdown_items) or []) %}
              <a class="dropdown-item" href="#">{{ item }}</a>
            {% endfor %}
          </div>
        </div>
        <input type="text" class="form-control border-light" style="padding: 30px 25px;" placeholder="{{ (header.search and header.search.placeholder) or 'Keyword' }}">
        <div class="input-group-append">
          <button class="btn btn-secondary px-4 px-lg-5">Search</button>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Header End -->

<!-- Contact Start -->
<div class="container-fluid py-5">
  <div class="container py-5">
    <div class="row align-items-center">
      <!-- Info cards -->
      <div class="col-lg-5 mb-5 mb-lg-0">
        <div class="bg-light d-flex flex-column justify-content-center px-5" style="min-height: 450px;">
          {% for c in (contact.info_cards or []) %}
          <div class="d-flex align-items-center mb-5">
            <div class="btn-icon bg-{{ c.bg | default('primary') }} mr-4">
              <i class="fa fa-2x fa-{{ c.icon | default('map-marker-alt') }} text-white"></i>
            </div>
            <div class="mt-n1">
              <h4>{{ c.title }}</h4>
              <p class="m-0">{{ c.text }}</p>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>

      <!-- Form -->
      <div class="col-lg-7">
        <div class="section-title position-relative mb-4">
          <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">{{ (contact.form and contact.form.title_small) or 'Need Help?' }}</h6>
          <h1 class="display-4">{{ (contact.form and contact.form.title_big) or 'Send Us A Message' }}</h1>
        </div>
        <div class="contact-form">
          <form>
            <div class="row">
              <div class="col-6 form-group">
                <input type="text" class="form-control border-top-0 border-right-0 border-left-0 p-0"
                       placeholder="{{ (contact.form and contact.form.fields and contact.form.fields.name) or 'Your Name' }}" required="required">
              </div>
              <div class="col-6 form-group">
                <input type="email" class="form-control border-top-0 border-right-0 border-left-0 p-0"
                       placeholder="{{ (contact.form and contact.form.fields and contact.form.fields.email) or 'Your Email' }}" required="required">
              </div>
            </div>
            <div class="form-group">
              <input type="text" class="form-control border-top-0 border-right-0 border-left-0 p-0"
                     placeholder="{{ (contact.form and contact.form.fields and contact.form.fields.subject) or 'Subject' }}" required="required">
            </div>
            <div class="form-group">
              <textarea class="form-control border-top-0 border-right-0 border-left-0 p-0" rows="5"
                        placeholder="{{ (contact.form and contact.form.fields and contact.form.fields.message) or 'Message' }}" required="required"></textarea>
            </div>
            <div>
              <button class="btn btn-primary py-3 px-5" type="submit">{{ (contact.form and contact.form.button) or 'Send Message' }}</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Contact End -->
